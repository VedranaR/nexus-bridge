{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": false
  },
  "rules": {
    "yoda": 0,
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "no-console": 1,
    "max-len": [1, 120],
    "no-multiple-empty-lines": [2, { "max": 1, "maxEOF": 1 }]
  },
  "globals": {
    "SiebelApp": false,
    "SiebelAppFacade": false,
    "SiebelJS": false
  }
}
