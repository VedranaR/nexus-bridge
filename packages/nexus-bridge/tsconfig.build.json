{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    ".cache",
    "__tests__",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
